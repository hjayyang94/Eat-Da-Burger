<div class="container">
  <div class='row'>
    <div class="jumbotron">
      <h1>Eat-Da-Burger</h1>
      <img src="assets/img/burger.png" alt="Burger Img">
    </div>

    <div class='row'>
      <div class='col-5-sm'>
        <h2>Pick a Burger you'd like to eat!</h2>


        {{#each burgers}} {{#unless devoured}}

        <p>{{id}}: {{name}}
          <button type="submit" value={{name}} class='devour_button'>Devour</button>
        </p>

        {{/unless}} {{/each}}

      </div>

      <div class='col-5-sm'>
        <h2>Burgers Devoured</h2>

        <div>
          <ul>
            {{#each burgers}} {{#if devoured}}
            <p>{{id}}: {{name}}</p>
            {{/if}} {{/each}}
          </ul>

        </div>
      </div>
    </div>

    <div class='row'>
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="b_name">Burger Name:</label>
          <input type="text" id="b_name" name="name">
        </div>

        <button type="submit" id='submit_burger'>Add Burger</button>
      </form>
    </div>
  </div>